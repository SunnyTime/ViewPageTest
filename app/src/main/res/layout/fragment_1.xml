<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <Button
        android:id="@+id/seekbar_dialig_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="含seekbar的Dialog"/>

    <Button
        android:id="@+id/checkbox_dialig_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="含CheckBox的Dialog"/>

    <Button
        android:id="@+id/edittext_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="含EditText的Dialog"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img2"/>


</LinearLayout>